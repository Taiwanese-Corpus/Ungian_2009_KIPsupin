        ],
        [
          "安爸亦佇貼門聯。",
          "An2-pa5 ah8 ti7 tah4 mng5-lian5."
        ],
        [
          "我佮阿兄，走出走入，",
          "Gua2 kah4 a1-hiann1, tsau2 tshut4 tsau2 lip8,"
        ],
        [
          "等欲分紅包，",
          "Tan2 beh4 pun1 ang5-pau1,"
        ],
