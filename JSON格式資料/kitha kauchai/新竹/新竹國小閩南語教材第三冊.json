{
  "出版年": "2002",
  "出版者": "新竹市政府",
  "年級別": "二上",
  "文類": "其他教材",
  "書名": "大頭仔明－新竹市國民小學閩南語教材第三冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "阿娟：你是佇咧畫啥物？",
          "A1-kuan1: li2 si7 ti7 leh4 ui7 siann2-mih8?"
        ],
        [
          "阿明：予你臆！",
          "A1-bing5: hoo7 li2 ioh4!"
        ],
        [
          "阿娟：這是牛，著無？",
          "A1-kuan1: tse1 si7 gu5, tioh8 bo5?"
        ],
        [
          "阿輝：這隻牛無角呢！",
          "A1-hui1: tsit4 tsiah4 gu5 bo5 kak4 ne1!"
        ],
        [
          "阿明：這毋是牛，是馬啦！",
          "A1-bing5: tse1 m7 si7 gu5, si7 be2 lah4!"
        ]
      ],
      "篇名": "一、畫圖"
    },
    {
      "段": [
        [
          "阿美：鉛筆借我，好無？",
          "A1-bi2: ian5-pit4 tsioh4 gua2, ho2--bo5?"
        ],
        [
          "阿明：好啊，你家己提。",
          "A1-bing5: ho2 ah4, li2 ka1-ki7 theh8."
        ],
        [
          "阿美：你的鉛筆囥佇叨位？",
          "A1-bi2: li2 e5 ian5-pit4 khng3 ti7 to2-ui7?"
        ],
        [
          "阿明：我的鉛筆佇鉛筆盒仔內底。",
          "A1-bing5: gua2 e5 ian5-pit4 ti7 ian5-pit4-ap8-a2 lai7-tue2."
        ],
        [
          "阿美：我看著矣，多謝！",
          "A1-bi2: gua2 khuann3 tioh8 ah4, to1-sia7!"
        ]
      ],
      "篇名": "二、鉛筆囥佇叨位"
    },
    {
      "段": [
        [
          "阿明：我的掃帚咧？",
          "A1-bing5: gua2 e5 sau3-tshiu2 leh4?"
        ],
        [
          "阿賢：我無看著。",
          "A1-hian5: gua2 bo5 khuann3--tioh8."
        ],
        [
          "阿明：毋知啥人提去",
          "A1-bing5: m7 tsai1 siann2 lang5 theh8--khi3"
        ],
        [
          "阿賢：我毋知影。",
          "A1-hian5: gua2 m7 tsai1-iann2."
        ]
      ],
      "篇名": "三、我的掃帚咧"
    },
    {
      "段": [
        [
          "阿娟：你食飽未？",
          "A1-kuan1: li2 tsiah8-pa2 bue7?"
        ],
        [
          "阿明：食飽矣！你咧？",
          "A1-bing5: tsiah8-pa2 ah4! li2 leh4?"
        ],
        [
          "阿娟：我抑未食飽。",
          "A1-kuan1: gua2 ah4-bue7 tsiah8-pa2."
        ],
        [
          "阿明：你哪會食這久？",
          "A1-bing5: li2 na2-e7 tsiah8 tsiah4 ku2?"
        ]
      ],
      "篇名": "四、食中晝"
    },
    {
      "段": [
        [
          "阿明：你哪會掛目鏡？",
          "A1-bing5: li2 na2-e7 kua3 bak8-kiann3?"
        ],
        [
          "阿娟：我近視矣。",
          "A1-kuan1: gua2 kun7-si7 ah4."
        ],
        [
          "阿明：你的目鏡足厚的。",
          "A1-bing5: li2 e5 bak8-kiann3 tsiok4 kau7-e5."
        ],
        [
          "阿娟：啊！",
          "A1-kuan1: bue7 ah4!"
        ],
        [
          "阿明：借我掛看覓。",
          "A1-bing5: tsioh4 gua2 kua3 khuann3-mai7."
        ]
      ],
      "篇名": "五、掛目鏡"
    },
    {
      "段": [
        [
          "護士：你是按怎？",
          "Hoo7-su7: li2 si7 an2-tsuann2?"
        ],
        [
          "阿明：我腹肚足疼的。",
          "A1-bing5: gua2 pak4-too2 tsiok4 thiann3 e5."
        ],
        [
          "護士：你有食早頓無",
          "Hoo7-su7: li2 u7 tsiah8 tsa2-tng3 bo5"
        ],
        [
          "阿明：有啊，我有食早頓。",
          "A1-bing5: u7--ah4, gua2 u7 tsiah8 tsa2-tng3."
        ],
        [
          "護士：你敢欲去便所？",
          "Hoo7-su7: li2 kiam2 beh4 khi3 pian7-soo2?"
        ],
        [
          "阿明：好啊。",
          "A1-bing5: ho2 ah4."
        ]
      ],
      "篇名": "六、腹肚疼"
    }
  ]
}
