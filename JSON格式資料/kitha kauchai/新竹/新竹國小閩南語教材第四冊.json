{
  "出版年": "2002",
  "出版者": "新竹市政府",
  "年級別": "二下",
  "文類": "其他教材",
  "書名": "大頭仔明－新竹市國民小學閩南語教材第四冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "阿明：咱來拍球。",
          "A1-bing5: lan2 lai5 phah4-kiu5."
        ],
        [
          "阿娟：好，我先。",
          "A1-kuan1: ho2, gua2 sing1."
        ],
        [
          "一二三四五，我拍五下。",
          "tsit8 nng7 sann1 si3 goo7, gua2 phah4 goo7 e7."
        ],
        [
          "阿明：一二三，我拍三下。",
          "A1-bing5: tsit8 nng7 sann1, gua2 phah4 sam1 e7."
        ],
        [
          "阿娟：我比你拍卡濟下。",
          "A1-kuan1: gua2 pi2 li2 phah4 khah4 tsue7 e7."
        ]
      ],
      "篇名": "一、拍球"
    },
    {
      "段": [
        [
          "阿明：這枝雨傘是毋是你的？",
          "A1-bing5: tsit4 ki1 hoo7-suann3 si7 m7 si7 li2 e5?"
        ],
        [
          "阿美：毋是我的。",
          "A1-bi2: m7 si7 gua2 e5."
        ],
        [
          "阿明：是毋是阿娟的？",
          "A1-bing5: si7 m7 si7 A1-kuan e5?"
        ],
        [
          "阿美：假那是呢！",
          "A1-bi2: ka2-na2 si7 ne1!"
        ]
      ],
      "篇名": "二、啥人的雨傘"
    },
    {
      "段": [
        [
          "阿娟：哇！有雞卵糕！",
          "A1-kuan1: uah4! u7 kue1-nng7-ko1!"
        ],
        [
          "阿明：今仔日是我的生日。",
          "A1-bing5: kin1-a2-jit8 si7 gua2 e5 sinn1-lit8."
        ],
        [
          "阿娟：這是買的抑是恁媽媽做的？",
          "A1-kuan1: tse1 si7 bue2 e5 ah4 si7 lin2 ma1-ma1 tso3 e5?"
        ],
        [
          "阿明：你臆看覓。",
          "A1-bing5: li2 ioh4 khuann3-mai7."
        ]
      ],
      "篇名": "三、雞卵糕"
    },
    {
      "段": [
        [
          "阿娟：阿明是去叨位？",
          "A1-kuan1: A1-bing5 si7 khi3 to2-ui7?"
        ],
        [
          "阿泉：伊去辦公室。",
          "A1-tsuann5: i1 khi3 pan7-kong1-sik4."
        ],
        [
          "阿娟：創啥物？",
          "A1-kuan1: tshong3 siann2-mih8?"
        ],
        [
          "阿泉：老師叫伊去提簿仔。",
          "A1-tsuann5: lau7-su1 kio3 i1 khi3 theh8 phoo7-a2."
        ]
      ],
      "篇名": "四、去提簿仔"
    },
    {
      "段": [
        [
          "阿明：哎喲！足疼的！",
          "A1-bing5: ai3 ioh4! Tsiok4 thiann3 e5!"
        ],
        [
          "護士：你的手是按怎？",
          "Hoo7-su7: li2 e5 tshiu2 si7 an2-tsuann2?"
        ],
        [
          "阿明：我替阿娟提椅仔，予椅仔夾著。",
          "A1-bing5: gua2 the3 A1-kuan1 theh8 i2-a2, hoo7 i2-a2 giap4 tioh8."
        ],
        [
          "護士：來，我共你糊藥仔。",
          "Hoo7-su7: lai5, gua2 ka7 li2 koo5-ioh8-a2."
        ],
        [
          "阿明：多謝！",
          "A1-bing5: to1-sia7!"
        ]
      ],
      "篇名": "五、糊藥仔"
    },
    {
      "段": [
        [
          "阿明：這欉花是啥人種的？",
          "A1-bing5: tsit4 tsang5 hue1 si7 siann2 lang5 tsing2 e5?"
        ],
        [
          "阿娟：是阿美種的。",
          "A1-kuan: si7 A1-bi2 tsing2 e5."
        ],
        [
          "阿明：彼欉花是啥人種的？",
          "A1-bing5: hit4 tsang5 hue1 si7 siann2 lang5 tsing2 e5?"
        ],
        [
          "阿娟：是我種的。",
          "A1-kuan1: si7 gua2 tsing2 e5."
        ],
        [
          "阿明：恁種的花攏足媠的。",
          "A1-bing5: lin2 tsing2 e5 hue1 long2 tsiok sui2 e5."
        ]
      ],
      "篇名": "六、啥人種的花"
    }
  ]
}
