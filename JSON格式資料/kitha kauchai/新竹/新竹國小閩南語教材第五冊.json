{
  "出版年": "2002",
  "出版者": "新竹市政府",
  "年級別": "三上",
  "文類": "其他教材",
  "書名": "大頭仔明－新竹市國民小學閩南語教材第五冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "阿伯：阿明！阿明！",
          "A1-peh4: a1-bing5! A1-bing5!"
        ],
        [
          "阿明：啥物代誌？",
          "A1-bing5: siann2-mih8 tai7-tsi3?"
        ],
        [
          "阿伯：你敢有看著阮兜的狗仔？",
          "A1-peh4: li2 kam2 u7 khuann3 tioh8 gun2 tau1 e5 kau2-a2?"
        ],
        [
          "阿明：叨一隻？",
          "A1-bing5: to2 tsit8 tsiah4?"
        ],
        [
          "阿伯：烏的彼隻。",
          "A1-peh4: oo1--e5 hit4 tsiah4."
        ],
        [
          "阿明：假那佇彼爿。",
          "A1-bing5: ka2-na2 ti7 hit4-ping5."
        ]
      ],
      "篇名": "一、揣狗仔"
    },
    {
      "段": [
        [
          "阿婆：請問阿媽有佇咧無？",
          "A1-po5: tshiann2-mng7 a1-ma2 u7 ti7--leh4 bo5?"
        ],
        [
          "阿明：阿媽出去呢。",
          "A1-bing5: a1-ma2 tshut4--khi3 ne1."
        ],
        [
          "阿婆：去叨位？",
          "A1-po5: khi3 to2-ui7?"
        ],
        [
          "阿明：去電頭毛。",
          "A1-bing5: khi3 tian7-thau5-mng5."
        ],
        [
          "阿婆：伊當時會轉來？",
          "A1-po5: i1 tang1-si5 e7 tng2--lai5?"
        ],
        [
          "阿明：連鞭就轉來矣。",
          "A1-bing5: liam5-mi1 tioh8 tng2--lai5 ah4."
        ]
      ],
      "篇名": "二、阿媽去電頭毛"
    },
    {
      "段": [
        [
          "醫生：你叨位無爽快？",
          "I1-sing1: li2 to2-ui7 bo5 song2-khuai3?"
        ],
        [
          "阿明：我嚨喉疼。",
          "A1-bing5: gua2 na5-au5 thiann3."
        ],
        [
          "醫生：我看覓。",
          "I1-sing1: gua2 khuann3-mai7."
        ],
        [
          "阿明：醫生，共我注射，好無？",
          "A1-bing5: i1-sing1, mai3 ka7 gua2 tsu3-sia7, ho2 bo5?"
        ],
        [
          "醫生：毋免注射，食藥仔就好矣！",
          "I1-sing1: m7 bian2 tsu3-sia7, tsiah8 ioh8-a2 tio7 ho2 ah4."
        ]
      ],
      "篇名": "三、看醫生"
    },
    {
      "段": [
        [
          "阿媽：阿明，阿媽欲去台北矣！",
          "A1-ma2: a1-bing5, a1-ma2 beh4 khi3 tai5-pak4 ah4!"
        ],
        [
          "阿明：你去台北創啥物？",
          "A1-bing5: li2 khi3 tai5-pak4 tshong3 siann2-mih8?"
        ],
        [
          "阿媽：去恁阿姑遐看看咧。",
          "A1-ma2: khi3 lin2 a1-koo1 hia1 khuann3-khuann3--leh4."
        ],
        [
          "阿明：你欲按怎去？",
          "A1-bing5: li2 beh4 an2-tsuann2 khi3?"
        ],
        [
          "阿媽：坐火車。",
          "A1-ma2: tse7 hue2-tshia1."
        ]
      ],
      "篇名": "四、阿媽欲去台北"
    },
    {
      "段": [
        [
          "老闆：好食的紅豆餅！",
          "Lau2-pan2: ho2 tsiah8 e5 ang5-tau7-piann2!"
        ],
        [
          "阿明：敢有包芋仔的！",
          "A1-bing5: kam2 u7 pau1 oo7-a2 e5!"
        ],
        [
          "老闆：有啊。",
          "Lau2-pan2: u7 ah4."
        ],
        [
          "阿明：十箍會使買幾塊？",
          "A1-bing5: tsap8 khoo1 e7-sai2 bue2 kui2 te3?"
        ],
        [
          "老闆：十箍會使買三塊。",
          "Lau2-pan2: tsap8 khoo1 e7-sai2 bue2 sann1 te3."
        ]
      ],
      "篇名": "五、踅夜市"
    },
    {
      "段": [
        [
          "老闆：你欲買啥物？",
          "Lau2-pan2: li2 beh4 bue2 siann2-mih8?"
        ],
        [
          "阿明：一粒包仔，一粒饅頭。",
          "A1-bing5: tsit8 liap8 pau1-a2, tsit8 liap8 ban2-tho5."
        ],
        [
          "老闆：失禮，包仔抑未炊好。",
          "Lau2-pan2: sit4-le2, pau1-a2 iah4-bue7 tshe1 ho2."
        ],
        [
          "阿明：愛擱等偌久？",
          "A1-bing5: ai3 koh4 tan2 gua7 ku2?"
        ],
        [
          "老闆：擱等兩分鐘。",
          "Lau2-pan2: koh4 tan2 nng7 hun1-tsing1."
        ],
        [
          "阿明：好啊！",
          "A1-bing5: ho2 ah4!"
        ]
      ],
      "篇名": "六、買包仔"
    }
  ]
}
