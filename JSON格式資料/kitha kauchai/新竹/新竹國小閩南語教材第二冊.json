{
  "出版年": "2002",
  "出版者": "新竹市政府",
  "年級別": "一下",
  "文類": "其他教材",
  "書名": "大頭仔明－新竹市國民小學閩南語教材第二冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "媽媽：食暗飽，咱來去看花燈。",
          "Ma1-ma1: tsiah8-am3 pa2, lan2 lai5-khi3 khuann3 hue1-ting1."
        ],
        [
          "阿明：好啊！",
          "A1-bing5: ho2 ah4!"
        ],
        [
          "媽媽：出去著愛細膩。",
          "Ma1-ma1: tshut4--khi3 tioh8 ai3 sue3-li7."
        ],
        [
          "阿明：為啥物？",
          "A1-bing5: ui7 siann2-mih8?"
        ],
        [
          "媽媽：外口有人佇咧放炮仔。",
          "Ma1-ma1: gua7-khau2 u7 lang5 ti7 leh4 pang3 phau3-a2."
        ]
      ],
      "篇名": "一、看花燈"
    },
    {
      "段": [
        [
          "阿明：這是啥物菜？",
          "A1-bing5: tse1 si7 siann2-mih8 tshai3?"
        ],
        [
          "阿媽：這是白菜，彼是高麗菜。",
          "A1-ma2: tse1 si7 peh8-tshai3, he1 si7 ko1-le5-tshai3."
        ],
        [
          "阿明：這攏是阿媽種的，著無？",
          "A1-bing5: tse1 long2 si7 a1-ma2 tsing2 e5, tioh8 bo5? '"
        ],
        [
          "阿媽：著啦！",
          "A1-ma2: tioh8--lah4! '"
        ]
      ],
      "篇名": "二、阿媽種菜"
    },
    {
      "段": [
        [
          "阿媽：二月二，菜包時…",
          "A1-ma2: li7-geh8-li7, tshai3-pau si5 …"
        ],
        [
          "阿明：阿媽，你是佇咧唸啥物？",
          "A1-bing5: a1-ma2, li2 si7 ti7 leh4 liam7 siann2-mih8?"
        ],
        [
          "阿媽：我是佇咧講舊曆的二月初二，是土地公生。",
          "A1-ma2: gua2 si7 ti7 leh4 kong2 ku7-lik8 e5 li7-geh8 tshue-li7, si7 thoo2-ti7-kong1 sinn1."
        ]
      ],
      "篇名": "三、二月二"
    },
    {
      "段": [
        [
          "阿明：阿公，行卡緊咧！",
          "A1-bing5: a1-kong1, kiann5 khah4 kin2 leh4!"
        ],
        [
          "阿公：毋通行傷緊，會跋倒。",
          "A1-kong1: m7-thang1 kiann5 siunn kin2, e7 puah8-to2."
        ],
        [
          "阿明：好啦！",
          "A1-bing5: ho2--lah4!"
        ],
        [
          "阿公：你有聽到鳥仔聲無？",
          "A1-kong1: li2 u7 thiann1 tioh8 tsiau2-a2 siann1 bo5?"
        ],
        [
          "阿明：有，足好聽。",
          "A1-bing5: u7, tsiok4 ho2-thiann1."
        ]
      ],
      "篇名": "四、爬十八尖山"
    },
    {
      "段": [
        [
          "阿明：阿公！阿公！",
          "A1-bing5: a1-kong1! A1-kong!"
        ],
        [
          "阿公：啥物代誌？",
          "A1-kong1: siann2-mih8 tai7-tsi3?."
        ],
        [
          "阿明：我的喙齒落落來。",
          "A1-bing5: gua2 e5 tshui3-khi2 lak4--loh8-lai5."
        ],
        [
          "阿公：喔！你欲換齒矣！",
          "A1-kong1: oo1! li2 beh4 uann7-khi2 ah4!"
        ],
        [
          "阿明：換齒？啥物是換齒？",
          "A1-bing5: uann7-khi2 ? siann2-mih8 si7 uann7-khi2 ?"
        ]
      ],
      "篇名": "五、落喙齒"
    },
    {
      "段": [
        [
          "阿明：足古錐的貓仔。",
          "A1-bing5: tsiok4 koo2-tsui1 e5 niau1-a2."
        ],
        [
          "阿媽：這是恁叔公送咱的。",
          "A1-ma2: tse1 si7 lin2 tsik4-kong1 sang3 lan2-e5."
        ],
        [
          "阿明：欲按怎飼？",
          "A1-bing5: beh4 an2-tsuann2 tshi7?"
        ],
        [
          "阿媽：共伊飼牛奶。",
          "A1-ma2: ka7 i1 tshi7 gu5-lin1."
        ],
        [
          "阿明：予我來飼。",
          "A1-bing5: hoo7 gua2 lai5 tshi7."
        ],
        [
          "阿媽：毋通予伊嗆著。",
          "A1-ma2: m7-thang1 hoo7 i1 tsak8--tioh8."
        ],
        [
          "阿明：我知啦！",
          "A1-bing5: gua2 tsai1 lah4!"
        ]
      ],
      "篇名": "六、飼貓仔囝"
    },
    {
      "段": [
        [
          "媽媽：咱來去菜市仔買菜。",
          "Ma1-ma1: lan2 lai5-khi3 tshai3-tshi7-a2 bue2-tshai3."
        ],
        [
          "阿明：菜市仔足濟人。",
          "A1-bing5: tshai3-tshi7-a2 tsiok4 tsue7 lang5."
        ],
        [
          "媽媽：你愛食啥物？",
          "Ma1-ma1: li2 ai3 tsiah8 siann2-mih8?"
        ],
        [
          "阿明：我愛食番麥佮貢丸。",
          "A1-bing5: gua2 ai3 tsiah8 huan1-beh8 kah4 kong3-uan5."
        ],
        [
          "媽媽：這寡物件遮攏有佇咧賣。",
          "Ma1-ma1: tsit4-kua2 mih8-kiann7 tsia1 long2 u7 ti7 leh4 bue7."
        ],
        [
          "阿明：按呢足方便。",
          "A1-bing5: an2-ne1 tsiok4 hong1-pian7."
        ]
      ],
      "篇名": "七、佮媽媽去買菜"
    },
    {
      "段": [
        [
          "阿明：遮是叨位？",
          "A1-bing5: tsia1 si7 to2-ui7?"
        ],
        [
          "貢丸超人：是親水公園。",
          "Kong3-uan5-tshiau1-lin5: si7 tshin1-tsui2 kong1-hng5."
        ],
        [
          "阿明：你看，有人佇咧撈魚。",
          "A1-bing5: li2 khuann3, u7 lang5 ti7 leh4 hoo5 hi5."
        ],
        [
          "貢丸超人：毋知撈有無？",
          "Kong3-uan5-tshiau1-lin5: m7 tsai1 hoo5 u7 bo5?"
        ],
        [
          "阿明：魚仔若匿起來，就抓著啊。",
          "A1-bing5: hi5-a2 na7 bih4--khi2-lai5, in1 tio7 liah8 bue7 tioh8 ah4."
        ]
      ],
      "篇名": "八、親水公園"
    },
    {
      "段": [
        [
          "阿媽：喂，阿明敢有佇咧？",
          "A1-ma2: ue5, A1-bing5 kam2 u7 ti7--leh4?"
        ],
        [
          "阿明：我就是。",
          "A1-bing5: gua2 tio7-si7."
        ],
        [
          "阿媽：你有想阿媽無？",
          "A1-ma2: li2 u7 siunn7 a1-ma2 bo5?"
        ],
        [
          "阿明：有啊，足想的。",
          "A1-bing5: u7--ah4, tsiok4 siunn7 e5."
        ],
        [
          "阿媽：恁當時欲轉來？",
          "A1-ma2: lin2 tang1-si5 beh4 tng2--lai5?"
        ],
        [
          "阿明：後禮拜就欲轉去矣。",
          "A1-bing5: au7-le2-pai3 tio7 beh4 tng2--khi3 ah4."
        ]
      ],
      "篇名": "九、敲電話"
    }
  ]
}
