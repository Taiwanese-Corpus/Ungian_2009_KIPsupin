        ],
        [
          "囡仔歡喜卜過年，",
          "Gin2-a2 huann1-hi2 beh4 kue3-ni5,"
        ],
        [
          "過年食甜粿，",
          "Kue3-ni5 tsiah8 tinn1-kue2,"
        ],
