{
  "出版年": "2007",
  "出版者": "巧兒文化實業有限公司",
  "年級別": "三上",
  "文類": "教材",
  "書名": "巧兒文化囡仔歌學台語第五冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "羊咩仔子，來食草，",
          "Iunn5-meh4-a2-kiann2, lai5 tsiah8-tshau2,"
        ],
        [
          "草埔頂，溜溜走，",
          "Tshau2-poo1-ting2, liu1-liu1-tsau2,"
        ],
        [
          "看著一隻大烏狗，",
          "Khuann3 tioh8 tsit8 tsiah4 tua7 oo1-kau2,"
        ],
        [
          "驚一下咩咩吼。",
          "Kiann1 tsit8-e7 meh4-meh4-hau2."
        ]
      ],
      "篇名": "第一課 羊咩仔子"
    },
    {
      "段": [
        [
          "來來來，來排隊，",
          "Lai5 lai5 lai5, lai5 pai5-tui7,"
        ],
        [
          "做頭前，食牛奶，",
          "Tso3 thau5-tsing5, tsiah8 gu5-ling1,"
        ],
        [
          "做尾後，食土豆，",
          "Tso3 bue2-au7, tsiah8 thoo5-tau7,"
        ],
        [
          "做中央，食糖霜。",
          "Tso3 tiong1-ng1, tsiah8 thng5-sng1."
        ]
      ],
      "篇名": "第二課 排隊"
    },
    {
      "段": [
        [
          "長跤的小奴才，",
          "Tng5-kha1 e5 sio2 loo5-tsai5,"
        ],
        [
          "你敢逐晚來，",
          "Li2 kann2 tak8-am3 lai5,"
        ],
        [
          "若是予阮十兄弟仔知，",
          "Na7 si7 hoo7 gun2 tsap8 hiann1-ti7-a2 tsai1,"
        ],
        [
          "好膽來試看覓。",
          "Ho2-tann2 lai5 tshi3-khuann3-mai7."
        ]
      ],
      "篇名": "第三課 長跤蠓"
    },
    {
      "段": [
        [
          "落褲叉，賣番麥，",
          "Lau3-khoo3-tshe1, be7 huan1-beh8,"
        ],
        [
          "番麥鬆鬆賣油蔥，",
          "Huan1-beh8 sang1-sang1 be7 iu5-tshang1,"
        ],
        [
          "油蔥酥酥賣茶箍，",
          "Iu5-tshang1 soo1-soo1 be7 te5-khoo1,"
        ],
        [
          "茶箍碇碇真歹用。",
          "Te5-khoo1 ting7-ting7 tsin1 phai2-ing7."
        ]
      ],
      "篇名": "第四課 落褲叉"
    },
    {
      "段": [
        [
          "大肚蝌仔真幼秀，",
          "Tua7-too7-kuainn1-a2 tsin1 iu3-siu3,"
        ],
        [
          "腹肚大大長尾溜，",
          "Pak4-too2 tua7-tua7 tng5 bue2-liu1,"
        ],
        [
          "無跤無手水內泅，",
          "Bo5 kha1 bo5 tshiu2 tsui2-lai7 siu5,"
        ],
        [
          "泅來泅去真自由。",
          "Siu5 lai5 siu5 khi3 tsin1 tsu7-iu5."
        ]
      ],
      "篇名": "第五課 大肚蝌仔"
    },
    {
      "段": [
        [
          "西瓜西瓜開黃花，",
          "Si1-kue1 si1-kue1 khui1 ng5-hue1,"
        ],
        [
          "開到全全花，",
          "Khui1 kah4 tsuan5-tsuan5 hue1,"
        ],
        [
          "一蕊花，二蕊花，",
          "Tsit8 lui2 hue1, nng7 lui2 hue1,"
        ],
        [
          "三蕊四蕊五蕊花，",
          "Sann1 lui2 si3 lui2 goo7 lui2 hue1."
        ],
        [
          "黃花開煞生西瓜，",
          "Ng5-hue1 khui1-suah4 senn1 si1-kue1,"
        ],
        [
          "生到全全瓜，",
          "Senn1 kah4 tsuan5-tsuan5 kue1,"
        ],
        [
          "一粒瓜，二粒瓜，",
          "Tsit8 liap8 kue1,nng7 liap8 kue1,"
        ],
        [
          "三粒四粒五粒瓜。",
          "Sann1 liap8 si3 liap8 goo7 liap8 kue1."
        ]
      ],
      "篇名": "第六課 西瓜花"
    },
    {
      "段": [
        [
          "一个囡仔兩領被，",
          "Tsit8 e5 gin2-a2 nng7 nia2 phue7,"
        ],
        [
          "三尾鹹魚四碗炊，",
          "Sann1 bue2 kiam5-hi5 si3 uann2 tshue1,"
        ],
        [
          "五條菜頭六塊粿，",
          "Goo7 tiau5 tshai3-thau5 lak8 te3 kue2,"
        ],
        [
          "七粒龍眼八枝椏，",
          "Tshit4 liap8 ling5-ging2 peh4 ki1 ue1,"
        ],
        [
          "九欉玫瑰十蕊花，",
          "Kau2 tsang5 mui5-kui3 tsap8 lui2 hue1,"
        ],
        [
          "蜜蜂蝴蝶颺颺飛。",
          "Bit8-phang1 oo5-tiap8 iann7-iann7-pue1."
        ]
      ],
      "篇名": "第七課 數目歌"
    },
    {
      "段": [
        [
          "阿才阿才天頂跋落來，",
          "A1-tsai5 a1-tsai5 thinn1-ting2 puah8--loh8-lai5,"
        ],
        [
          "跋一下倒頭栽，真厲害",
          "Puah8 tsit8-e7 to3-thau5-tsai1, tsin1 li7-hai7,"
        ],
        [
          "有喙齒，無下頦，",
          "U7 tshui3-khi2, bo5 e7-hai5,"
        ],
        [
          "有目睭，無目眉，",
          "U7 bak8-tsiu1, bo5 bak8-bai5,"
        ],
        [
          "有腹肚，無肚臍，",
          "U7 pak4-too2, bo5 too7-tsai5,"
        ],
        [
          "實在真悲哀。",
          "Sit8-tsai7 tsin1 pi1-ai1."
        ]
      ],
      "篇名": "第八課 阿才"
    }
  ]
}
