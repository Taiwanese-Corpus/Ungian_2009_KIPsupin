{
  "出版年": "2007",
  "出版者": "巧兒文化實業有限公司",
  "年級別": "五上",
  "文類": "教材",
  "書名": "巧兒文化囡仔歌學台語第九冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "土蚓仔子，無跤會行路，",
          "Too7-un2-a2-kiann2, bo5-kha1 e7 kiann5-loo7,"
        ],
        [
          "無人教伊會唱歌，",
          "Bo5 lang5 ka3 i1 e7 tshiunn3-kua1,"
        ],
        [
          "身長長，腰軟軟，",
          "Sin1 tng5-tng5, io1 nng2-nng2,"
        ],
        [
          "開土空來做眠床。",
          "Khui1 thoo5-khang1 lai5 tso3 bin5-tshng5."
        ]
      ],
      "篇名": "第一課 土蚓仔子"
    },
    {
      "段": [
        [
          "隔壁的阿婆仔真敖唸，",
          "Keh4-piah4 e5 a1-po5-a2 tsin1 gau5 liam7,"
        ],
        [
          "匏仔釉釉，無刨皮伊嘛唸，",
          "Pu5-a2 iu1-iu1, bo5 khau1 phue5 i1 ma7 liam7,"
        ],
        [
          "苦瓜粗粗，刨皮伊嘛唸，",
          "Khoo2-kue1 tshoo1-tshoo1, khau1 phue5 i1 ma7 liam7,"
        ],
        [
          "人講澎湖菜瓜－十棯。",
          "Lang5 kong2 phenn5-oo5 tshai3-kue1－tsap8-liam7."
        ]
      ],
      "篇名": "第二課 澎湖菜瓜"
    },
    {
      "段": [
        [
          "頭縮縮，尾短短，",
          "Thau5 kiu1-kiu1, bue2 te2-te2,"
        ],
        [
          "出世就惦土跤爬，",
          "Tshut4-si3 tsiu7 tiam3 thoo5-kha1 pe5,"
        ],
        [
          "人人攏是皮包骨，",
          "Lang5-lang5 long2 si7 phe5-pau1-kut4,"
        ],
        [
          "獨獨阮是骨包皮。",
          "Tok8-tok8 gun2 si7 kut4-pau1-phe5."
        ]
      ],
      "篇名": "第三課 龜"
    },
    {
      "段": [
        [
          "鴟鴞撲撲飛，匏仔換金瓜，",
          "La7-hioh8 phu7-phu7-pue1, pu5-a2 uann7 kim1-kue,"
        ],
        [
          "金瓜真歹食，匏仔換柴屐，",
          "Kim1-kue1 tsin1 phai2-tsiah8, pu5-a2 uann7 tsha5-kiah8,"
        ],
        [
          "柴屐真歹穿，匏仔換鵁鴒，",
          "Tsha5-kiah8 tsin1 phai2-tshing7, pu5-a2 uann7 ka1-ling7,"
        ],
        [
          "鵁鴒敖講話，匏仔換茶鍋。",
          "Ka1-ling7 gau5 kong2-ue7, pu5-a2 uann7 te5-ue1."
        ]
      ],
      "篇名": "第四課 鴟鴞撲撲飛"
    },
    {
      "段": [
        [
          "一的磅米芳，二的炒韭菜，",
          "It4 e5 pong7 bi2-phang1, ji7 e5 tsha2 ku2-tshai3,"
        ],
        [
          "三的沖沖滾，四的炒米粉，",
          "Sann1 e5 tshiang7-tshiang7-kun2, si3 e5 tsha2 bi2-hun2,"
        ],
        [
          "五的五將軍，六的好子孫，",
          "Goo7 e5 goo7 tsiong1-kun1, lak8 e5 ho2 kiann2-sun1,"
        ],
        [
          "七的煮麵線，八的踦咧看，",
          "Tshit4 e5 tsu2 mi7-suann3, peh4 e5 khia7 leh4 khuann3,"
        ],
        [
          "九的九嬸婆，十的挵大鑼。",
          "Kau2 e5 kau2-tsim2-po5, tsap8 e5 long3 tua7-lo5."
        ]
      ],
      "篇名": "第五課 磅米芳"
    },
    {
      "段": [
        [
          "一隻狗仔跋落溝仔，",
          "Tsit8 tsiah4 kau2-a2 puah8 loh8 kau1-a2,"
        ],
        [
          "叫阿猴仔去提鉤仔，",
          "Kio3 a1-kau5-a2 khi3 theh8 kau1-a2,"
        ],
        [
          "阿猴仔提鉤仔來溝仔邊，",
          "A1-kau5-a2 theh8 kau1-a2 lai5 kau1-a2-pinn1,"
        ],
        [
          "用鉤仔鉤溝仔內的狗仔。",
          "Iong7 kau1-a2 kau1 kau1-a2-lai7 e5 kau2-a2."
        ]
      ],
      "篇名": "第六課 猴鉤狗"
    },
    {
      "段": [
        [
          "哦！我有一個好哥哥，",
          "Oo3! gua2 u7 tsit8 e5 ho2-ko1-ko1,"
        ],
        [
          "伊的名字叫做小多多，",
          "I1 e5 mia5-ji7 kio3-tso3 siau2-too1-too1"
        ],
        [
          "伊敖讀書閣愛唱歌，",
          "I1 gau5 thak8-tsu1 koh4 ai3 tshang3-ko1,"
        ],
        [
          "厝邊隔壁攏呵咾，",
          "Tshu3-pinn1 keh4-piah4 long2 o1-lo2,"
        ],
        [
          "阮時常做陣做功課，",
          "Gun2 si5-siong5 tso3-tin7 tso3 kong1-kho3,"
        ],
        [
          "嘛做陣去蹉跎，",
          "Ma7 tso3-tin7 khi3 tshit4-tho5,"
        ],
        [
          "有遮呢好的小哥哥，",
          "U7 tsiah4-ni7 ho2 e5 siau2 ko1-ko1,"
        ],
        [
          "爸爸媽媽免煩惱。",
          "Pa1-pa1 ma1-ma1 bian2 huan5-lo2."
        ]
      ],
      "篇名": "第七課 好哥哥"
    },
    {
      "段": [
        [
          "正月正，請子婿，入大廳。",
          "Tsiann1-gueh8-tsiann1, tshiann2 kiann2-sai3, jip8 tua7-thiann1,"
        ],
        [
          "二月二，刣豬公來謝土地。",
          "Ji7-gueh8-ji7, thai5 ti1-kong1 lai5 sia7 thoo2-ti7,"
        ],
        [
          "三月三，桃仔李仔伨頭擔。",
          "Sann1-gueh8-sann1, tho5-a2 li2-a2 thin7 thau5 tann1,"
        ],
        [
          "四月四，桃仔來，李仔去。",
          "Si3-gueh8-si3, tho5-a2 lai5, li2-a2 khi3,"
        ],
        [
          "五月五，龍船鼓，水內渡。",
          "Goo7-gueh8-goo7, liong5-tsun5 koo2, tsui2-lai7 too7,"
        ],
        [
          "六月六，踏水車，拍碌碡。",
          "Lak8-gueh8-lak8, tah8 tsui2-tshia1, phah4 lak8-tak8."
        ]
      ],
      "篇名": "第八課 正月正"
    }
  ]
}
