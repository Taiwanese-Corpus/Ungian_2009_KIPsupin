{
  "出版年": "2007",
  "出版者": "巧兒文化實業有限公司",
  "年級別": "二下",
  "文類": "教材",
  "書名": "巧兒文化囡仔歌學台語第四冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "玫瑰花，真清芳，",
          "Mui5-kui3 hue1, tsin1 tshing1-phang1,"
        ],
        [
          "葉青青，花紅紅，",
          "Hioh8 tshinn1-tshinn1, hue1 ang5-ang5,"
        ],
        [
          "白花紅花齊齊開，",
          "Peh8-hue1 ang5-hue1 tsiau5-tsiau5-khui1,"
        ],
        [
          "第一無閒採蜜蜂。",
          "Te7-it4 bo5-ing5 tshai2 bit8 phang1."
        ]
      ],
      "篇名": "第一課 玫瑰花"
    },
    {
      "段": [
        [
          "碌硞馬，拋拋走，",
          "Lok8-khok8-be2, pha1-pha1-tsau2,"
        ],
        [
          "對雞籠，到打狗。",
          "Tui3 ke1-lang5, kau3 tann2-kau2,"
        ],
        [
          "三暝三日行昧到，",
          "Sann1 me5 sann1 jit8 kiann5 be7 kau3,"
        ],
        [
          "揣無路，嘛嘛吼。",
          "Tshue7 bo5 loo7, ma3-ma3-hau2."
        ]
      ],
      "篇名": "第二課 碌硞馬"
    },
    {
      "段": [
        [
          "一隻蠓仔哼呀哼，",
          "Tsit8 tsiah4 bang2-a2 hinn1-a7-hinn1,"
        ],
        [
          "哼到阮的耳仔邊，",
          "Hinn1 kau3 gun2 e5 hinn7-a2 pinn1,"
        ],
        [
          "出手給伊搧一下，",
          "Tshut4-tshiu2 ka7 i1 sian3--tsit8-e7,"
        ],
        [
          "喙貝煞烏青。",
          "Tshui3-phe2 suah4 oo1-tshinn1."
        ]
      ],
      "篇名": "第三課 蠓仔"
    },
    {
      "段": [
        [
          "月娘月娘月阿姨，",
          "Gueh8-niu5 gueh8-niu5 gueh8-a1-i5,"
        ],
        [
          "是我無小心用手指，",
          "Si7 gua2 bo5 sio2-sim1 iong7 tshiu2 ki2,"
        ],
        [
          "請你千萬莫受氣，",
          "Tshiann2 li2 tshian1-ban7 mai3 siu7-khi3,"
        ],
        [
          "毋通夯刀割我雙爿耳。",
          "M7-thang1 gia5 to1 kuah4 gua2 siang1-ping5 hinn7."
        ]
      ],
      "篇名": "第四課 月娘"
    },
    {
      "段": [
        [
          "金魚金魚金熠熠，",
          "Kim1-hi5 kim1-hi5 kim1-sih4-sih4,"
        ],
        [
          "腹肚大大尾開枝，",
          "Pak4-too2 tua7-tua7 bue2 khui1-ki1,"
        ],
        [
          "目睭凸凸喙微微，",
          "Bak8-tsiu1 thoo3-thoo3 tshui3 bi5-bi5,"
        ],
        [
          "泅來泅去真歡喜。",
          "Siu5 lai5 siu5 khi3 tsin1 huann1-hi2."
        ]
      ],
      "篇名": "第五課 金魚"
    },
    {
      "段": [
        [
          "閹咯雞，偷白卵，",
          "Iam1-kok8-ke1, thau1 peh8-nng7,"
        ],
        [
          "一粒食，一粒舔，",
          "Tsit8 liap8 tsiah8, tsit8 liap8 tsng7,"
        ],
        [
          "咯雞仔子避密密，",
          "Kok8-ke1-a2-kiann2 bih4 bat8-bat8,"
        ],
        [
          "鳥鼠仔子去掠賊。",
          "Niau2-tshi2-a2-kiann2 khi3 liah8-tshat8."
        ]
      ],
      "篇名": "第六課 閹咯雞"
    },
    {
      "段": [
        [
          "厝前一隻毋成狗，",
          "Tshu3-tsing5 tsit8 tsiah4 m7-tsiann5 kau2,"
        ],
        [
          "厝後一隻毋成猴，",
          "Tshu3-au7 tsit8 tsiah4 m7-tsiann5 kau5,"
        ],
        [
          "兩隻相拍車糞斗，",
          "Nng7 tsiah4 sio1-phah4 tshia1-pun3-tau2,"
        ],
        [
          "猴咬狗，狗咬猴。",
          "Kau5 ka7 kau2, kau2 ka7 kau5."
        ]
      ],
      "篇名": "第七課 毋成猴"
    },
    {
      "段": [
        [
          "燒粉圓，送到恁厝邊，",
          "Sio1 hun2-inn5, sang3 kah4 lin2 tshu3-pinn1,"
        ],
        [
          "燒碗粿，送到恁後尾，",
          "Sio1 uann2-kue2, sang3 kah4 lin2 au7-bue2,"
        ],
        [
          "燒肉包，送到恁兜，",
          "Sio1 bah4-pau1, sang3 kah4 lin2 tau1,"
        ],
        [
          "燒肉粽，一粒相送。",
          "Sio1 bah4-tsang3, tsit8 liap8 sio1-sang3."
        ]
      ],
      "篇名": "第八課 燒粉圓"
    },
    {
      "段": [
        [
          "火金姑，飛呀飛落土，",
          "Hue2-kim1-koo1, pue1-a7 pue1 loh8 thoo5,"
        ],
        [
          "坐我船，拍我的鼓，",
          "Tse7 gua2 tsun5, phah4 gua2 e5 koo2,"
        ],
        [
          "食我清米飯，配我鹹菜莆，",
          "Tsiah8 gua2 tshing1-bi2-png7, phue3 gua2 kiam5 tshai3-poo2,"
        ],
        [
          "對我門口過，",
          "Tui3 gua2 mng5-khau2 kue3,"
        ],
        [
          "唉唷，掠來通做某。",
          "Ai1-ioo1, liah8 lai5 thang1 tso3-boo2."
        ]
      ],
      "篇名": "第九課 火金姑"
    }
  ]
}
