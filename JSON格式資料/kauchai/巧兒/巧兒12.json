  "資料": [
    {
      "段": [
        [
          "嬸婆欲做客，拄著恁大伯，",
          "Tsim2-po5 beh4 tso3-kheh4, tu2 tioh8 lin2 tua7-peh4,"
        ],
        [
          "大伯賣紅龜，拄著恁姐夫，",
          "Tua7-peh4 be7 ang5-ku1, tu2 tioh8 lin2 tse2-hu1,"
        ],
        [
          "姐夫賣粉圓，拄著恁大姨，",
          "Tse2-hu1 be7 hun2-inn5, tu2 tioh8 lin2 tua7-i5,"
        ],
        [
          "大姨賣粗紙，煞來拄著我。",
          "Tua7-i5 be7 tshoo1-tsua2, suah4 lai5 tu2 tioh8 gua2."
        ]
      ],
      "篇名": "第一課 做客"
    },
    {
      "段": [
        [
          "草蜢仔公，穿紅褲，",
          "Tshau2-meh4-a2-kong1, tshing7 ang5-khoo3,"
        ],
        [
          "趕牛去賣布，趁錢通娶某，",
          "Kuann2-gu5 khi3 be7-poo3, than3-tsinn5 thang1 tshua7-boo2,"
        ],
        [
          "新娘仔大腹肚，",
          "Sin1-niu5-a2 tua7-pak4-too2,"
        ],
        [
          "正月生查甫，二月生查某，",
          "Tsiann1-gueh8 senn1 tsa1-poo1, ji7-gueh8 senn1 tsa1-boo2,"
        ],
        [
          "拍銅鑼，挵大鼓。",
          "Phah4 tang5-lo5, long3 tua7-koo2."
        ]
      ],
      "篇名": "第二課 草蜢仔公"
    },
    {
      "段": [
        [
          "過車路，行天橋，",
          "Kue3 tshia1-loo7, kiann5 thian1-kio5,"
        ],
        [
          "寬寬仔行，毋免驚，",
          "Khuann1-khuann1-a2 kiann5, m7 bian2 kiann1,"
        ],
        [
          "大車小車橋跤過，",
          "Tua7-tshia1 sio2-tshia1 kio5-kha1 kue3,"
        ],
        [
          "人佇橋頂行，",
          "Lang5 ti7 kio5-ting2 kiann5,"
        ],
        [
          "行橋頂，看風景，",
          "Kiann5 kio5-ting2, khuann3 hong1-king2,"
        ],
        [
          "車來車去攏毋驚，攏毋驚。",
          "Tshia1 lai5 tshia1 khi3 long2 m7 kiann1, long2 m7 kiann1."
        ]
      ],
      "篇名": "第三課 天橋"
    },
    {
      "段": [
        [
          "普度來，欲做戲，",
          "Phoo2-too7 lai5, beh4 tso3-hi3,"
        ],
        [
          "吩咐三，吩咐四，",
          "Huan1-hu3 sann1, huan1-hu3 si3,"
        ],
        [
          "吩咐親家親姆仔來看戲，",
          "Huan1-hu3 tshin1-ke1 tshinn1-m2-a2 lai5 khuann3-hi3,"
        ],
        [
          "對竹跤，厚竹刺，",
          "Tui3 tik4-kha1, kau7 tik4-tshi3,"
        ],
        [
          "對溪邊，驚跋死，",
          "Tui3 khe1-pinn1, kiann1 puah8-si2,"
        ],
        [
          "對大路，嫌費氣，",
          "Tui3 tua7-loo7, hiam5 hui3-khi3,"
        ],
        [
          "若無，都攏莫去。",
          "Na7-bo5, to1 long2 mai3 khi3."
        ]
      ],
      "篇名": "第四課 看戲"
    },
    {
      "段": [
        [
          "厝前一條清水溝，",
          "Tshu3-tsing5 tsit8 tiau5 tshing1 tsui2-kau1,"
        ],
        [
          "厝後一座小山頭，",
          "Tshu3-au7 tsit8 tso7 sio2 suann1-thau5,"
        ],
        [
          "山頂一片油桐樹，",
          "Suann1-ting2 tsit8 phian3 iu5-tong5 tshiu7,"
        ],
        [
          "空氣清新風透透，",
          "Khong1-khi3 tshing1-sin1 hong1 thau3-thau3,"
        ],
        [
          "山坑仔水直直流，",
          "Suann1-khenn1-a2 tsui2 tit8-tit8 lau5,"
        ],
        [
          "路邊的花蕊白泡泡，",
          "Loo7-pinn1 e5 hue1-lui2 peh8-phau1-phau1,"
        ],
        [
          "正身護龍三合院，",
          "Tsiann3-sin1-hoo7-ling5 sam1-hap8-inn7,"
        ],
        [
          "遐！就是阮兜。",
          "Hia1! tsiu7-si7 gun2 tau1."
        ]
      ],
      "篇名": "第五課 阮兜"
    },
    {
      "段": [
        [
          "學泅水著愛學詳細，",
          "Oh8 siu5-tsui2 tioh8-ai3 oh8 siong5-se3,"
        ],
        [
          "認真學，一定會，",
          "Jin7-tsin1 oh8, it4-ting7 e7,"
        ],
        [
          "先學禁氣藏水底，",
          "Sian1 oh8 kim3-khui3 tshang3 tsui2-te2,"
        ],
        [
          "才學狗爬蝴蝶飛，",
          "Tsiah4 oh8 kau2-pe5 oo5-tiap8 pe1,"
        ],
        [
          "水蛙仔泅，死囡仔躺，",
          "Tsui2-ke1-a2-siu5, si2-gin2-a2-the1,"
        ],
        [
          "泅來泅去真好勢。",
          "Siu5 lai5 siu5 khi3 tsin1 ho2-se3."
        ]
      ],
      "篇名": "第六課 學泅水"
    },
    {
      "段": [
        [
          "摜汾來飼豬，割草來飼魚。",
          "Kuann7-phun1 lai5 tshi7-ti1, kuah4-tshau2 lai5 tshi7-hi5."
        ],
        [
          "魚有若大，手蹄仔大。",
          "Hi5 u7 gua7 tua7, tshiu2-te5-a2 tua7."
        ],
        [
          "我欲食魚頭，魚頭有骨。",
          "Gua2 beh4 tsiah8 hi5-thau5, hi5-thau5 u7 kut4."
        ],
        [
          "我欲食中箍，中箍有刺。",
          "Gua2 beh4 tsiah8 tiong1-khoo1, tiong1-khoo1 u7 tshi3."
        ],
        [
          "我欲食魚尾，魚尾開叉。",
          "Gua2 beh4 tsiah8 hi5-bue2, hi5-bue2 khui1-tshe1."
        ],
        [
          "我欲攏總食。大家走予掠。",
          "Gua2 beh4 long2-tsong2 tsiah8. Ta7-ke1 tsau2 hoo7 liah8."
        ]
      ],
      "篇名": "第七課 食魚"
    },
    {
      "段": [
        [
          "比利巴拉一陣大雨，",
          "Pi1-li1-pa1-la1 tsit8-tsun7 tua7-hoo7,"
        ],
        [
          "東爿出日，西爿落雨，",
          "Tang1-ping5 tshut4-jit8, sai1-ping5 loh8-hoo7,"
        ],
        [
          "比利巴拉，一陣大雨，",
          "Pi1-li1-pa1-la1, tsit8-tsun7 tua7-hoo7,"
        ],
        [
          "垃圾的大路，洗到真清氣，",
          "Lah4-sap4 e5 tua7-loo7, se2 kah4 tsin1 tshing1-khi3,"
        ],
        [
          "骯髒的樹葉，洗到真青翠，",
          "Am1-tsam1 e5 tshiu7-hioh8, se2 kah4 tsin1 tshenn1-tshui3,"
        ],
        [
          "連鞭出日，連鞭落雨，",
          "Liam5-mi1 tshut4-jit8, liam5-mi1 loh8-hoo7,"
        ],
        [
          "這就是西北雨。",
          "Tse1 tsiu7-si7 sai1-pak4-hoo7."
        ]
      ],
      "篇名": "第八課 西北雨"
    }
  ]
}
