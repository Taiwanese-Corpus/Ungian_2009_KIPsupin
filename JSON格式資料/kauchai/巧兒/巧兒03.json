{
  "出版年": "2007",
  "出版者": "巧兒文化實業有限公司",
  "年級別": "二上",
  "文類": "教材",
  "書名": "巧兒文化囡仔歌學台語第三冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "花園內，百花開，",
          "Hue1-hng5 lai7, pah4-hue1 khui1,"
        ],
        [
          "紅花白花一大堆，",
          "Ang5-hue1 peh8-hue1 tsit8 tua7 tui1,"
        ],
        [
          "蝴蝶蝴蝶有夠媠，",
          "Oo5-tiap8 oo5-tiap8 u7-kau3 sui2,"
        ],
        [
          "飛來飛去真古錐。",
          "Pue1 lai5 pue1 khi3 tsin1 koo2-tsui1."
        ]
      ],
      "篇名": "第一課 蝴蝶"
    },
    {
      "段": [
        [
          "小胖哥愛食臊，",
          "Siau2-phang3-ko1 ai3 tsiah8-tsho1,"
        ],
        [
          "肥豬肉燖米糕，",
          "Pui5 ti1-bah4 tim7 bi2-ko1,"
        ],
        [
          "一頓三碗不算多，",
          "Tsit8 tng3 sann1 uann2 put4-suan3 to1,"
        ],
        [
          "飯後加一塊雞卵糕。",
          "Png7-au7 ke1 tsit8 te3 ke1-nng7-ko1."
        ]
      ],
      "篇名": "第二課 小胖哥"
    },
    {
      "段": [
        [
          "坐飛機，看天頂；",
          "Tse7 hui1-ki1, khuann3 thinn1-ting2,"
        ],
        [
          "坐大船，看海湧；",
          "Tse7 tua7-tsun5, khuann3 hai2-ing2,"
        ],
        [
          "坐火車，看風景；",
          "Tse7 hue2-tshia1, khuann3 hong1-king2,"
        ],
        [
          "坐牛車順續挽龍眼。",
          "Tse7 gu5-tshia1 sun7-sua3 ban2 ling5-ging2."
        ]
      ],
      "篇名": "第三課 飛機"
    },
    {
      "段": [
        [
          "水蛙仔子呱呱呱，",
          "Tsui2-ke1-a2-kiann2 kuak8-kuak8-kuak8,"
        ],
        [
          "伊出世嘛是肚大大，",
          "I1 tshut4-si3 ma7 si7 too2 tua7-tua7,"
        ],
        [
          "田中央，起厝住，",
          "Tshan5 tiong1-ng1, khi2-tshu3 tua3,"
        ],
        [
          "無人教伊會唱歌。",
          "Bo5 lang5 ka3 i1 e7 tshiunn3-kua1."
        ]
      ],
      "篇名": "第四課 水蛙仔子"
    },
    {
      "段": [
        [
          "緊走緊走，趕緊走，",
          "Kin2 tsau2 kin2 tsau2, kuann2-kin2 tsau2,"
        ],
        [
          "雨欲落來囉！",
          "Hoo7 beh4 loh8--lai5 loo3!"
        ],
        [
          "雷公熠那乒乓叫，",
          "Lui5-kong1 sih4-nah4 pin3-piang3-kio3,"
        ],
        [
          "天烏烏，看無路，",
          "Thinn1 oo1-oo1, khuann3 bo5 loo7,"
        ],
        [
          "緊走緊走，趕緊走，",
          "Kin2 tsau2 kin2 tsau2, kuann2-kin2 tsau2,"
        ],
        [
          "雨來囉！",
          "Hoo7 lai5 loo3!"
        ]
      ],
      "篇名": "第五課 雨來囉"
    },
    {
      "段": [
        [
          "廟內一隻貓，",
          "Bio7-lai7 tsit8 tsiah4 niau1,"
        ],
        [
          "廟外一隻貓，",
          "Bio7-gua7 tsit8 tsiah4 niau1,"
        ],
        [
          "內底彼隻白鼻貓，",
          "Lai7-te2 hit4 tsiah4 peh8-phinn7 niau1,"
        ],
        [
          "外口彼隻烏鼻貓，",
          "Gua7-khau2 hit4 tsiah4 oo1-phinn7 niau1,"
        ],
        [
          "貓－貓－貓咬貓",
          "niau1－ niau1－ niau1 ka7 niau1."
        ]
      ],
      "篇名": "第六課 貓咬貓"
    },
    {
      "段": [
        [
          "搖仔搖，搖仔搖，",
          "Io5-a7-io5, io5-a7-io5,"
        ],
        [
          "搖到內山去挽茄，",
          "Io5 kah4 lai7-suann1 khi3 ban2-kio5,"
        ],
        [
          "挽若濟？挽一布袋。",
          "Ban2 gua7 tse7? ban2 tsit8 poo3-te7."
        ],
        [
          "也通食，也通賣，",
          "Ia7 thang1 tsiah8, ia7 thang1 be7,"
        ],
        [
          "也通予嬰仔做度晬。",
          "Ia7 thang1 hoo7 enn1-a2 tso3 too7-tse3."
        ]
      ],
      "篇名": "第七課 搖仔搖"
    },
    {
      "段": [
        [
          "阿嬷惦田庄，",
          "A1-ma2 tiam3 tshan5-tsng1,"
        ],
        [
          "四邊是甘蔗園，",
          "Si3-pinn1 si7 kam1-tsia3 hng5,"
        ],
        [
          "簡單食三頓，",
          "Kan2-tan1 tsiah8 sann1-tng3,"
        ],
        [
          "白白清米飯，",
          "Peh8-peh8 tshing1-bi2-png7,"
        ],
        [
          "鹹鹹菜莆卵，",
          "Kiam5-kiam5 tshai3-poo2 nng7,"
        ],
        [
          "淡淡菜頭湯。",
          "Tsiann2-tsiann2 tshai3-thau5 thng1."
        ]
      ],
      "篇名": "第八課 阿嬷兜"
    },
    {
      "段": [
        [
          "冬節算來是冬天，",
          "Tang1-tseh4 sng3 lai5 si7 tang1-thinn1,"
        ],
        [
          "家家戶戶人搓圓，",
          "Ke1-ke1-hoo7-hoo7 lang5 so1-inn5,"
        ],
        [
          "大人認真去趁錢，",
          "Tua7-lang5 jin7-tsin1 khi3 than3-tsinn5,"
        ],
        [
          "囡仔兄歡喜過新年。",
          "Gin2-a2-hiann1 huann1-hi2 kue3 sin1-ni5."
        ]
      ],
      "篇名": "第九課 歡喜過新年"
    }
  ]
}
