{
  "出版年": "2007",
  "出版者": "巧兒文化實業有限公司",
  "年級別": "四上",
  "文類": "教材",
  "書名": "巧兒文化囡仔歌學台語第七冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "八月十五是中秋，",
          "Peh4-gueh8 tsap8-goo7 si7 tiong1-tshiu1,"
        ],
        [
          "有人歡喜有人愁，",
          "U7 lang5 huann1-hi2 u7 lang5 tshiu5,"
        ],
        [
          "有人愛食月餅，",
          "U7 lang5 ai3 tsiah8 gueh8-piann2,"
        ],
        [
          "有人愛食文旦柚。",
          "U7 lang5 ai3 tsiah8 bun5-tan3-iu7."
        ]
      ],
      "篇名": "第一課中秋"
    },
    {
      "段": [
        [
          "有一隻桌仔，有一支刀仔，",
          "U7 tsit8 tsiah4 toh4-a2, u7 tsit8 ki1 to1-a2,"
        ],
        [
          "有一粒桃仔，有一塊糕仔，",
          "U7 tsit8 liap8 tho5-a2, u7 tsit8 te3 ko1-a2,"
        ],
        [
          "用彼支刀仔，來切桃仔，",
          "Iong7 hit4 ki1 to1-a2, lai5 tshiat4 tho5-a2,"
        ],
        [
          "切著桌仔，切著糕仔。",
          "Tshiat4 tioh8 toh4-a2, tshiat4 tioh8 ko1-a2."
        ]
      ],
      "篇名": "第二課 刀仔佮桃仔"
    },
    {
      "段": [
        [
          "身軀高大長管鼻，",
          "Sin1-khu1 kuan5-tua7 tng5-kong2-phinn7,"
        ],
        [
          "四支柱跤芭蕉耳，",
          "Si3 ki1 thiau7-kha1 pa1-tsiau1-hinn7,"
        ],
        [
          "猶有兩支長喙齒，",
          "Ia2 u7 nng7 ki1 tng5 tshui3-khi2,"
        ],
        [
          "欲食物件用鼻拈。",
          "Beh4 tsiah8 mih8-kiann7 iong7 phinn7 ni1."
        ]
      ],
      "篇名": "第三課 大象"
    },
    {
      "段": [
        [
          "一陣鴨，去揣食，",
          "Tsit8 tin7 ah4, khi3 tshue7 tsiah8,"
        ],
        [
          "行到半路欠一隻，",
          "Kiann5 kah4 puann3-loo7 khiam3 tsit8 tsiah4,"
        ],
        [
          "小小的鴨咪仔落孤單，",
          "Sio2-sio2 e5 ah4-bi1-a2 loh8 koo1-tuann1,"
        ],
        [
          "揣無鴨陣來做伴，",
          "Tshue7 bo5 ah4-tin7 lai5 tso3-phuann7,"
        ],
        [
          "嘎嘎嘎嘎嘎嘎嘎，",
          "Ka1-ka1-ka1-ka1-ka1-ka1-ka1,"
        ],
        [
          "沿路吼，沿路行，",
          "Ian5-loo7 hau2, ian5-loo7 kiann5,"
        ],
        [
          "返來去厝內等媽媽。",
          "Tng2 lai5-khi3 tshu3-lai7 tan2 ma1-ma1."
        ]
      ],
      "篇名": "第四課 鴨咪仔"
    },
    {
      "段": [
        [
          "祝福你身體勇健，",
          "Tsiok4-hok4 li2 sin1-the2 iong2-kiann7,"
        ],
        [
          "祝福你青春永在，",
          "Tsiok4-hok4 li2 tshing1-tshun1 ing2-tsai7,"
        ],
        [
          "祝福你萬事如意，",
          "Tsiok4-hok4 li2 ban7-su7 ju5-i3,"
        ],
        [
          "祝福你永遠快樂。",
          "Tsiok4-hok4 li2 ing2-uan2 khuai3-lok8,"
        ],
        [
          "祝你生日快樂快樂，",
          "Tsiok4 li2 senn1-jit8 khuai3-lok8 khuai3-lok8,"
        ],
        [
          "祝你生日快樂。",
          "Tsiok4 li2 senn1-jit8 khuai3-lok8."
        ]
      ],
      "篇名": "第五課 生日的祝福"
    },
    {
      "段": [
        [
          "一个囡仔愛講話，",
          "Tsit8 e5 gin2-a2 ai3 kong2-ue7,"
        ],
        [
          "到底是咧講啥麼貨，",
          "Tau3-te2 si7 leh4 kong2 siann2-mi2 hue3,"
        ],
        [
          "講天講地講高低，",
          "Kong2-thinn1 kong2-te7 kong2 kuan5-ke7,"
        ],
        [
          "講烏講白講大細，",
          "Kong2 oo1 kong2 peh8 kong2 tua7-se3,"
        ],
        [
          "講啥麼，講啥麼貨，",
          "kong2 siann2-mi2, kong2 siann2-mi2 hue3,"
        ],
        [
          "愈講愈濟，愈講愈濟，",
          "Lu2 kong2 lu2 tse7, lu2 kong2 lu2 tse7,"
        ],
        [
          "毋知講啥麼貨，",
          "M7 tsai1 kong2 siann2-mi2 hue3,"
        ],
        [
          "講到一布袋。",
          "Kong2 kah4 tsit8 poo3-te7."
        ]
      ],
      "篇名": "第六課 講啥麼貨"
    },
    {
      "段": [
        [
          "龜佮兔，來賽跑，",
          "Ku1 kah4 thoo3, lai5 sai3-phau2,"
        ],
        [
          "兔走頭前無越頭，",
          "Thoo3 tsau2 thau5-tsing5 bo5 uat8-thau5,"
        ],
        [
          "半路歇睏欲食草，",
          "Puann3-loo7 hioh4-khun3 beh4 tsiah8-tshau2,"
        ],
        [
          "這隻龜，寬寬仔走，",
          "Tsit tsiah4 ku1, khuann1-khuann1-a2 tsau2,"
        ],
        [
          "拼過兔，待先到，",
          "Piann3-kue3 thoo3, tai7-sian1 kau3,"
        ],
        [
          "大家呵咾龜真敖。",
          "Ta7-ke1 o1-lo2 ku1 tsin1 gau5."
        ]
      ],
      "篇名": "第七課 龜佮兔"
    },
    {
      "段": [
        [
          "天氣燒熱汗那滴，",
          "Thinn1-khi3 sio1-juah8 kuann7 na2 tih4,"
        ],
        [
          "來去田庄避，",
          "Lai5-khi3 tshan5-tsng1 bih4,"
        ],
        [
          "外公外嬤疼惜阮，",
          "Gua7-kong1 gua7-ma2 thiann3-sioh4 gun2,"
        ],
        [
          "叫阮莫返去，",
          "Kio3 gun2 mai3 tng2--khi3,"
        ],
        [
          "釣水蛙，掠鱔魚，",
          "Tio3 tsui2-ke1, liah8 sian7-hi5,"
        ],
        [
          "實在真趣味，",
          "Sit8-tsai7 tsin1 tshu3-bi7,"
        ],
        [
          "溪水清清通泅水，",
          "Khe1-tsui2 tshing1-tshing1 thang1 siu5-tsui2,"
        ],
        [
          "也通藏水沫。",
          "Ia7 thang1 tshang3-tsui2-bih."
        ]
      ],
      "篇名": "第八課 藏水沫"
    }
  ]
}
