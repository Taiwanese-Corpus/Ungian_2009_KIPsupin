  "資料": [
    {
      "段": [
        [
          "一二三，穿新衫。",
          "Tsit8 nng7 sann, tshing7 sin-sann."
        ],
        [
          "四五六，冊要讀。",
          "Si3 goo7 lak8, tsheh4 ai3 thak8."
        ],
        [
          "七八九，毋通吼。",
          "Tshit4 peh4 kau2, m7 thang1 hau2."
        ],
        [
          "歡歡喜喜來學校。",
          "Huann1 huann1 hi2 hi2 lai5 hak8 hau7"
        ]
      ],
      "篇名": "第一課 一二三"
    },
    {
      "段": [
        [
          "小姑娘仔喙甜甜，",
          "Sio2-koo1-niu5-a2 tshui3 tinn1-tinn1,"
        ],
        [
          "講話笑咪咪，",
          "Kong2-ue7 tshio3-bi1-bi1,"
        ],
        [
          "愛讀冊，念歌詩，",
          "Ai3 thak8-tsheh4, liam7 kua1-si1,"
        ],
        [
          "實在真趣味。",
          "Sit8-tsai7 tsin1 tshu3-bi7."
        ]
      ],
      "篇名": "第二課 小姑娘仔"
    },
    {
      "段": [
        [
          "巴布巴布，阿爹飼牛，",
          "Pa7-pu1 pa7-pu1, a1-tia1 tshi7-gu5,"
        ],
        [
          "巴布巴布，阿娘飼豬，",
          "Pa7-pu1 pa7-pu1, a1-nia5 tshi7-tu1,"
        ],
        [
          "巴布巴布，阿兄讀書，",
          "Pa7-pu1 pa7-pu1, a1-hiann1 thak8-tsu1,"
        ],
        [
          "小弟小妹，愛食紅龜。",
          "Sio2-ti7 sio2-mue7, ai3 tsiah8 ang5-ku1."
        ]
      ],
      "篇名": "第三課 巴布巴布"
    },
    {
      "段": [
        [
          "風風  風緊來，",
          "Hong1 hong1   hong1 kin2 lai5,"
        ],
        [
          "一銑予你買鳳梨；",
          "Tsit8 sian2 hoo7 li2 be2 ong7-lai5;"
        ],
        [
          "風風  風緊去，",
          "Hong1 hong1   hong1 kin2 khi3,"
        ],
        [
          "一銑予你買茭芷。",
          "Tsit8 sian2 hoo7 li2 be2 ka1-tsi2."
        ]
      ],
      "篇名": "第四課 風緊來"
    },
    {
      "段": [
        [
          "一隻田蛤仔喙闊闊，",
          "Tsit8 tsiah4 tshan5-kap4-a2 tshui3 khuah4-khuah4,"
        ],
        [
          "目睭凸凸腹肚大，",
          "Bak8-tsiu1 thoo3-thoo3 pak4-too2 tua7,"
        ],
        [
          "三更半暝咧念歌，",
          "Sann1-kinn1-puann3-mi5 leh8 liam7-kua1"
        ],
        [
          "呱呱呱呱呱呱。",
          "Kuak8-kuak8-kuak8-kuak8 kuak8-kuak8"
        ]
      ],
      "篇名": "第五課 田蛤仔"
    },
    {
      "段": [
        [
          "有一隻鳥鼠，",
          "U7 tsit8 tsiah4 niau2-tshi2,"
        ],
        [
          "想欲偷食米，",
          "Siunn7 beh4 thau1 tsiah8-bi2,"
        ],
        [
          "跋落去醃缸內，",
          "Puah8 loh8 khi3 am1-kng1 lai7,"
        ],
        [
          "驚到半小死！",
          "Kiann1 kah4 puann3-sio2-si2!"
        ]
      ],
      "篇名": "第六課 鳥鼠仔"
    },
    {
      "段": [
        [
          "食芭樂，放槍籽，",
          "Tsiah8 pa1-la2, pang3 tshing3-tsi2,"
        ],
        [
          "食柚仔，放蝦米，",
          "Tsiah8 iu7-a2, pang3 he5-bi2,"
        ],
        [
          "食龍眼，放木耳，",
          "Tsiah8 ling5-ging2, pang3 bok8-ji2,"
        ],
        [
          "食著甘蔗斷喙齒。",
          "Tsiah8 tioh8 kam1-tsia3 tng7 tshui3-khi2."
        ]
      ],
      "篇名": "第七課 食芭樂"
    },
    {
      "段": [
        [
          "魚鰡魚鰡發喙鬚，",
          "Hi5-liu1 hi5-liu1 huat4 tshui3-tshiu1,"
        ],
        [
          "真敖鑽閣真敖泅，",
          "Tsin1 gau5 tsng3 koh4 tsin1 gau5 siu5,"
        ],
        [
          "規身軀滑溜溜，",
          "Kui1-sin1-khu1 kut8-liu1-liu1,"
        ],
        [
          "人欲掠，伊就趕緊溜。",
          "Lang5 beh4 liah8, i1 tsiu7 kuann2-kin2 liu1."
        ]
      ],
      "篇名": "第八課 魚鰡"
    },
    {
      "段": [
        [
          "正月初一早早起，",
          "Tsiann1-gueh8 tshe1-it4 tsa2-tsa2-khi2,"
        ],
        [
          "大家恭喜笑咪咪，",
          "Ta7-ke kiong1-hi2 tshio3-bi1-bi1,"
        ],
        [
          "平平安安事事如意，",
          "Ping5-ping5-an1-an1 su7-su7-ju5-i3,"
        ],
        [
          "快快樂樂過新年。",
          "Khuai3-khuai3-lok8-lok8 kue3 sin1-ni5."
        ]
      ],
      "篇名": "第九課 大家恭喜"
    },
    {
      "段": [
        [
          "一尾魚仔  二碗飯，",
          "Tsit8 bue2 hi5-a2 nng7 uann2 png7,"
        ],
        [
          "三个囡仔  四間厝，",
          "Sann1 e5 gin2-a2 si3 king1 tshu3,"
        ],
        [
          "五杯果汁  六塊餅，",
          "Goo7 pue1 ko2-tsiap4 lak8 te3 piann2,"
        ],
        [
          "七隻狗仔  八領衫，",
          "Tshit4 tsiah4 kau2-a2 peh4 nia2 sann1,"
        ],
        [
          "九粒糖仔  十張紙，",
          "Kau2 liap8 thng5-a2 tsap8 tiunn1 tsua2,"
        ],
        [
          "點來點去  就（毋）是我。",
          "Tiam2 lai5 tiam2 khi3 tsiu7（m7）si7 gua2."
        ]
      ],
      "篇名": "附錄 點將歌"
    }
  ]
