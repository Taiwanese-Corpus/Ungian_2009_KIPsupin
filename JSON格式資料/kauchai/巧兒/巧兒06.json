  "書名": "巧兒文化囡仔歌學台語第六冊",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "蚼蟻蚼蟻真厲害，",
          "Kau2-hia7 kau2-hia7 tsin1 li7-hai7,"
        ],
        [
          "好食的物件伊攏知，",
          "Ho2-tsiah8 e5 mih8-kiann7 i1 long2 tsai1,"
        ],
        [
          "大家相招同齊來，",
          "Ta7-ke1 sio1-tsio1 tang5-tse5 lai5,"
        ],
        [
          "認真搬返去厝內。",
          "Jin7-tsin1 puann1 tng2 khi3 in1 tshu3-lai7."
        ]
      ],
      "篇名": "第一課 蚼蟻"
    },
    {
      "段": [
        [
          "落雨天，真趣味，",
          "Loh8-hoo7 thinn1, tsin1 tshu3-bi7,"
        ],
        [
          "夯雨傘，穿雨衣，",
          "Gia5 hoo7-suann3, tshing7 hoo7-i1,"
        ],
        [
          "冊包揹惦胛脊後，",
          "Tsheh4-pau1 phainn7 tiam3 ka1-tsiah4 au7,"
        ],
        [
          "寬寬仔行，到學校。",
          "Khuann1-khuann1-a2 kiann5, kau3 hak8-hau7."
        ]
      ],
      "篇名": "第二課 落雨天"
    },
    {
      "段": [
        [
          "一元二元三元半，",
          "Tsit8 khoo1 nng7 khoo1 sann1 khoo1-puann3,"
        ],
        [
          "四元五元開來看，",
          "Si3 khoo1 goo7 khoo1 khui1 lai5 khuann3,"
        ],
        [
          "六元七元八元半，",
          "Lak8 khoo1 tshit4 khoo1 peh4 khoo1-puann3,"
        ],
        [
          "九元十元來去換。",
          "Kau2 khoo1 tsap8 khoo1 lai5-khi3 uann7."
        ]
      ],
      "篇名": "第三課 錢筒仔"
    },
    {
      "段": [
        [
          "十字路口青紅燈，",
          "Sip8-ji7 loo7-khau2 tshenn1-ang5-ting1,"
        ],
        [
          "注意看，分乎清，",
          "Tsu3-i3 khuann3, hun1 hoo7 tshing1,"
        ],
        [
          "青燈趕緊行，",
          "Tshenn1-ting1 kuann2-kin2 kiann5,"
        ],
        [
          "紅燈愛暫停。",
          "Ang5-ting1 ai3 tsiam7-thing5."
        ]
      ],
      "篇名": "第四課 青紅燈"
    },
    {
      "段": [
        [
          "紅田嬰，真敖飛，",
          "Ang5 tshan5-enn1, tsin1 gau5 pue1,"
        ],
        [
          "飛高高，飛低低，",
          "Pue1 kuan5-kuan5, pue1 ke7-ke7,"
        ],
        [
          "飛過山，飛過溪，",
          "Pue1 kue3 suann1, pue1 kue3 khe1,"
        ],
        [
          "飛到阮兜來相揣。",
          "Pue1 kau3 gun2 tau1 lai5 sio1-tshue7."
        ]
      ],
      "篇名": "第五課 紅田嬰"
    },
    {
      "段": [
        [
          "阿猴仔瘦比巴，",
          "A1-kau5-a2 san2-pi2-pa1,"
        ],
        [
          "食飯配豬跤，",
          "Tsiah8-png7 phue3 ti1-kha1,"
        ],
        [
          "一碗豆腐湯，",
          "Tsit8 uann2 tau7-hu7 thng1,"
        ],
        [
          "哎唷！吸到乾乾乾，",
          "Ai2-io1! suh4 kah4 ta1-ta1-ta1,"
        ],
        [
          "阿猴仔笑哈哈，",
          "A1-kau5-a2 tshio3-ha1-ha1,"
        ],
        [
          "食飽來蹺跤，",
          "Tsiah8-pa2 lai5 khiau1-kha1,"
        ],
        [
          "眠床頂跋落來，",
          "Bin5-tshng5-ting2 puah8--loh8-lai5,"
        ],
        [
          "叫阿娘，叫阿爸。",
          "Kio3 a1-nia5, kio3 a1-pa1."
        ]
      ],
      "篇名": "第六課 阿猴仔"
    },
    {
      "段": [
        [
          "咱的教室像咱兜，",
          "Lan2 e5 kau3-sik4 tshiunn7 lan2 tau1,"
        ],
        [
          "逐日攏是愛摒掃，",
          "Tak8-jit8 long2 si7 ai3 piann3-sau3,"
        ],
        [
          "掃土跤，洗地板，",
          "Sau3 thoo5-kha1, se2 te7-pan2,"
        ],
        [
          "排桌椅，拭門窗，",
          "Pai5 toh4-i2, tshit4 mng5-thang1,"
        ],
        [
          "大家互相愛幫忙，",
          "Ta7-ke1 hoo7-siong ai3 pang1-bang5,"
        ],
        [
          "工課做好心輕鬆。",
          "Khang1-khue3 tso3 ho2 sim1 khin1-sang1."
        ]
      ],
      "篇名": "第七課 摒掃"
    },
    {
      "段": [
        [
          "一年的菜鳥心驚驚，",
          "It4 ni5 e5 tshai3-tsiau2 sim1 kiann1-kiann1,"
        ],
        [
          "二年的古錐人人疼，",
          "Ji7 ni5 e5 koo2-tsui1 lang5-lang5 thiann3,"
        ],
        [
          "三年的恬恬真古意，",
          "Sann1 ni5 e5 tiam7-tiam7 tsin1 koo2-i3,"
        ],
        [
          "四年的粗心無得定，",
          "Si3 ni5 e5 tshoo1-sim1 bo5 tik4-tiann7,"
        ],
        [
          "五年的激骨又懂怳，",
          "Goo7 ni5 e5 kik4-kut4 iu7 tang2-hiann2,"
        ],
        [
          "六年的親像老龜精。",
          "Lak8 ni5 e5 tshin1-tshiunn7 lau7 ku1-tsiann1."
        ]
      ],
      "篇名": "第八課 小學生"
    }
  ]
}
