  "書名": "南瀛台語冊第一冊（一下）",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "目珠看，耳空聽，",
          "Bak8-tsiu1 khuann3, hinn7-khang1 thiann1,"
        ],
        [
          "喙食物件，舌試鹹汫  ，",
          "Tshui3 tsiah8 mih8-kiann7, tsih8 tshi3 kiam5 tsiann2,"
        ],
        [
          "芳臭鼻知影。",
          "Phang1-tshau3 phinn7 tsai1-iann2."
        ]
      ],
      "篇名": "第一課、鼻目喙"
    },
    {
      "段": [
        [
          "我的目珠成爸爸，",
          "Gua2 e5 bak8-tsiu1 sing5 pa1-pa1,"
        ],
        [
          "我的喙仔成媽媽，",
          "Gua2 e5 tshui3-a2 sing5 ma1-ma1,"
        ],
        [
          "我的鼻仔成阿公，",
          "Gua2 e5 phinn7-a2 sing5 a1-kong1,"
        ],
        [
          "我的面形成阿媽，",
          "Gua2 e5 bin7-hing5 sing5 a1-ma2,"
        ],
        [
          "爸爸、媽媽、阿公、阿媽，",
          "Pa1-pa1, ma1-ma1, a1-kong1, a1-ma2,"
        ],
        [
          "攏講我是的心肝仔。",
          "Long2 kong2 gua2 si7 in1 e5 sim1-kuann1-a2."
        ]
      ],
      "篇名": "第二課、心肝仔"
    },
    {
      "段": [
        [
          "點仔點水缸，",
          "Tiam2-a2 tiam2 tsui2-kng1,"
        ],
        [
          "啥人放屁搖尻川？",
          "Siann2-lang5 pang3-phui3 io5 kha1-tshng1?"
        ],
        [
          "點仔點腹肚，",
          "tiam2-a2 tiam2 pak4-too2,"
        ],
        [
          "啥人上山去拍虎？",
          "Siann2-lang5 tsiunn7-suann1 khi3 phah4 hoo2?"
        ],
        [
          "點仔點喙齒，",
          "Tiam2-a2 tiam2 tshui3-khi2,"
        ],
        [
          "啥人下暗做老鼠？",
          "Siann2-lang5 e7-am3 tso3 niau2-tshi2?"
        ],
        [
          "點仔點目珠，",
          "Tiam2-a2 tiam2 bak8-tsiu1,"
        ],
        [
          "啥人下頦發喙鬚？",
          "Siann2-lang5 e7-hai5 huat4 tshui3-tshiu1?"
        ],
        [
          "點仔點鼻頭，",
          "Tiam2-a2 tiam2 phinn7-thau5,"
        ],
        [
          "啥人讀冊上蓋[敖^力]？",
          "Siann2-lang5 thak8-tsheh4 siong7-kai3 gau5?"
        ]
      ],
      "篇名": "第三課、迌點名歌"
    },
    {
      "段": [
        [
          "這的老師真趣味，",
          "Tsia1 e5 lau7-su1 tsin1 tshu3-bi7,"
        ],
        [
          "這的同學笑瞇瞇，",
          "Tsia1 e5 tong5-oh8 tshio3-bi1-bi1,"
        ],
        [
          "做夥讀冊佮寫字，",
          "Tso3-hue2 thak8-tsheh4 kah4 sia2-ji7,"
        ],
        [
          "湊陣唱歌更搬戲。",
          "Tau3-tin7 tshionn3-kua1 koh4 puann1-hi3."
        ],
        [
          "這是一個好所在，",
          "Tsia1 si7 tsit8 e5 ho2-soo2-tsai7,"
        ],
        [
          "逐工來這上歡喜。",
          "Tak8-kang1 lai5 tsia1 siong7 huann1-hi2."
        ]
      ],
      "篇名": "第四課、這是一個好所在"
    },
    {
      "段": [
        [
          "一年的空空，",
          "It4 ni5 e5 khong1-khong1,"
        ],
        [
          "二年的孫悟空，",
          "Ji7 ni5 e5 sun1-ngoo7-khong1,"
        ],
        [
          "三年的吐劍光，",
          "Sann1 ni5 e5 thoo3-kiam3-kong1,"
        ],
        [
          "四年的[敖^力]膨風，",
          "Si3 ni5 e5 gau5 phong3-hong1,"
        ],
        [
          "五年的上帝公，",
          "Goo7 ni5 e5 siong7-te3-kong1,"
        ],
        [
          "六年的閻羅王。",
          "Lak8 ni5 e5 giam5-lo5-ong5."
        ]
      ],
      "篇名": "第五課、一年的空空"
    },
    {
      "段": [
        [
          "運動埕，人誠濟，",
          "Un7-tong7-tiann5, lang5 tsiann5 tse7,"
        ],
        [
          "拍球、跳箍仔、宓相揣，",
          "Phah4-kiu5, thiau3-khoo1-a2, bih4-sio-tshue7,"
        ],
        [
          "有人反死狗仔，",
          "U7 lang5 ping2-si2-kau2-a2,"
        ],
        [
          "嘛有人佇樹仔跤坐。",
          "Ma7 u7 lang5 ti7 tshiu7-a2-kha1 tse7."
        ],
        [
          "老師呵咾阮，",
          "Lau7-su1 o1-lo2 gun2,"
        ],
        [
          "身體勇健，運動逐項會。",
          "Sin1-the2 iong2-kiann7, un7-tong7 tak8-hang7 e7."
        ]
      ],
      "篇名": "第六課、運動埕"
    },
    {
      "段": [
        [
          "起厝起厝，起好好，",
          "Khi2-tshu3 khi2-tshu3, khi2 ho2-ho2,"
        ],
        [
          "厝前栽花，朋友來做夥，",
          "Tshu3 tsing5 tsai1 hue1, ping5-iu2 lai5 tso3-hue2,"
        ],
        [
          "厝邊栽樹，鳥仔來做岫。",
          "Tshu3-pinn1 tsai1 tshiu7, tsiau2-a2 lai5 tso3-siu7."
        ]
      ],
      "篇名": "第七課、起厝"
    },
    {
      "段": [
        [
          "厝角鳥仔砩砩飛，",
          "Tshu3-kak4-tsiau2-a2 phut8-phut8-pue1,"
        ],
        [
          "聽著蟬仔哮螺螺。",
          "Thiann1 tioh8 sian5-a2 hau2 le5-le5."
        ],
        [
          "蟬仔兄，哮啥貨？",
          "Sian5-a2-hiann1, hau2 siann2-hue3?"
        ],
        [
          "哮無人，通講話。",
          "Hau2 bo5 lang5, thang1 kong2-ue7."
        ],
        [
          "阮兜蹛佇厝頂尾，",
          "Gun2 tau1 tua3 ti7 tshu3-ting2 bue2,"
        ],
        [
          "請汝來坐來飲茶，",
          "Tshiann2 li2 lai5 tse7 lai5 lim1-te5,"
        ],
        [
          "做夥唱歌歕鼓吹，",
          "Tso3-hue2 tshio3-kua1 pun5 koo2-tshue1,"
        ],
        [
          "更請汝食紅龜粿。",
          "Koh4 tshiann2 li2 tsiah8 ang5-ku1-kue2."
        ]
      ],
      "篇名": "第八課、厝角鳥仔"
    },
    {
      "段": [
        [
          "厝邊阿伯來相揣，",
          "Tshu3-pinn1 a1-peh4 lai5 sio1-tshue7,"
        ],
        [
          "阿公泡茶請人客；",
          "A1-kong1 phau3-te5 tshiann2 lang5-kheh4;"
        ],
        [
          "茶鈷茶杯細細個，",
          "Te5-koo2 te5-pue1 se3-se3 e5,"
        ],
        [
          "親像在辦公家伙；",
          "Tshin1-tshiunn7 leh4 pan7-kong1-ke1-hue2;"
        ],
        [
          "若飲茶，若配話，",
          "Na2 lim-te5, na2 phue3-ue7,"
        ],
        [
          "笑聲透到街仔尾。",
          "Tshio3-siann1 thang3 kah4 ke1-a2 bue2."
        ]
      ],
      "篇名": "第九課、泡茶"
    },
    {
      "段": [
        [
          "曾文溪水愛唱歌，",
          "Tsan1-bun5 khe1-tsui2 ai3 tshio3-kua1,"
        ],
        [
          "一面唱，一面行；",
          "Tsit8-bin7 tshio3, tsit8-bin7 kiann5;"
        ],
        [
          "出楠西，過善化，",
          "Tshut4 lam5-se1, kue3 sian7-hua3,"
        ],
        [
          "行到七股揣親情；",
          "Kiann5 kau3 tshit4-koo2 tshue7 tshin1-tsiann5;"
        ],
        [
          "烏面撓杯來做伴。",
          "Oo1-bin7-la7-pue1 lai5 tso3-phuann7."
        ]
      ],
      "篇名": "第十課、曾文溪"
    },
    {
      "段": [
        [
          "一個水庫像珊瑚，",
          "Tsit8 e5 tsui2-khoo3 tshiunn7 suan1-oo5,"
        ],
        [
          "有山有水一幅圖。",
          "U7 suann1 u7 tsui2 tsit8 pak4 too5."
        ],
        [
          "水庫大腹肚，落雨貯歸肚。",
          "Tsui2-khoo3 tua7-pak4-too2, loh8-hoo7 te2 kui1 too7."
        ],
        [
          "伊是烏山頭水庫，",
          "I1 si7 oo1-suann1-thau5-tsui2-khoo3,"
        ],
        [
          "食水淹田免艱苦，",
          "Tsiah8-tsui2 im1-tshan5 bian2 kan1-khoo2,"
        ],
        [
          "伊共咱照顧，咱共伊保護。",
          "I1 ka7 lan2 tsiau3-koo3, lan2 ka7 i1 po2-hoo7."
        ]
      ],
      "篇名": "第十一課、烏山頭水庫"
    },
    {
      "段": [
        [
          "南鲲鯓，廟大間，",
          "Lam5-khun1-sin1, bio7 tua7 king1,"
        ],
        [
          "有古蹟，有風景，",
          "U7 koo2-tsik4, u7 hong1-king2,"
        ],
        [
          "槺榔山莊美到若仙境。",
          "Khong1-long5 san1-tsong1 sui2 kah4 na7 sian1-king2."
        ],
        [
          "南鯤鯓，迎王爺，",
          "Lam5-khun1-sin1, ngia5 ong5-ia5,"
        ],
        [
          "扛大轎，踅廟埕。",
          "Kng1 tua7 kio7, seh8 bio7 tiann5."
        ],
        [
          "砲仔聲，予阮著一驚。",
          "Phau3-a2 siann1, hoo7 gun2 tioh8-tsit8-kiann1."
        ]
      ],
      "篇名": "第十二課、南鲲鯓廟"
    }
  ]
}
