{
  "出版年": "2001",
  "出版者": "台南縣政府",
  "年級別": "一上",
  "文類": "教材",
  "書名": "南瀛台語冊第一冊（一上）",
  "書寫系統": "漢字",
  "資料": [
    {
      "段": [
        [
          "目珠圓輾輾，",
          "Bak8-tsiu1 inn5-lin3-lin3,"
        ],
        [
          "腹肚圓滾滾；",
          "Pak4-too2 inn5-kun3-kun3;"
        ],
        [
          "無人拍會倒，",
          "Bo5 lang5 phah4 e7 to2,"
        ],
        [
          "功夫第一好。",
          "Kang1-hu1 te7-it4-ho2."
        ]
      ],
      "篇名": "第一課、阿不倒仔"
    },
    {
      "段": [
        [
          "一二三，猴猻仔穿新衫；",
          "Tsit8 nng7 sann1, kau5-san1-a2 tshing7 sin1-sann1;"
        ],
        [
          "四五六，猴猻仔讀小學；",
          "Si3 goo7 lak8, kau5-san1-a2 thak8 sio2-hak8;"
        ],
        [
          "七八九，猴猻仔撦畚斗；",
          "Tshit4 peh4 kau2, kau5-san1-a2 tshia1-pun3-tau2;"
        ],
        [
          "十十一十二，猴猻仔愛寫字。",
          "Tsap8 tsap8-it4 tsap8-ji7, kau5-san1-a2 ai3 sia2-ji7."
        ]
      ],
      "篇名": "第二課、數字歌"
    },
    {
      "段": [
        [
          "來學校，學寫字，",
          "Lai5 hak8-hau7, oh8 sia2-ji7,"
        ],
        [
          "寫字真趣味，",
          "Sia2-ji7 tsin1 tshu3-bi7,"
        ],
        [
          "寫一句「我愛妳」，",
          "Sia2 tsit8 ku3 “gua2 ai3 li2”,"
        ],
        [
          "送予阿母伊，",
          "Sang3 hoo7 a1-bu2 i1,"
        ],
        [
          "阿母笑到嘴仔裂裂裂。",
          "A1-bu2 tshio3 kah4 tshui3-a2 lih8-lih8-lih8."
        ]
      ],
      "篇名": "第三課、學寫字"
    },
    {
      "段": [
        [
          "媽媽大腳婆，",
          "Ma1-ma1 tua7-kha1-po5,"
        ],
        [
          "我小腳婆。",
          "gua2 sio2-kha1-po5."
        ],
        [
          "大腳婆愛小腳婆，",
          "Tua7-kha1-po5 ai3 sio2-kha1-po5,"
        ],
        [
          "小腳婆愛大腳婆。",
          "Sio2-kha1-po5 ai3 tua7-kha1-po5."
        ],
        [
          "四個腳婆攏是寶，",
          "Si3 e5 kha1-po5 long2 si7 po2,"
        ],
        [
          "會當做夥上蓋好。",
          "E7-tang3 tso3-hue2 siong7-kai3 ho2."
        ]
      ],
      "篇名": "第四課、大腳婆佮小腳婆"
    },
    {
      "段": [
        [
          "捏一個土俑仔，做爸爸；",
          "Liap4 tsit8 e5 thoo5-ang1-a2, tso3 pa1-pa1;"
        ],
        [
          "捏一個土俑仔，做媽媽。",
          "Liap4 tsit8 e5 thoo5-ang1-a2, tso3 ma1-ma1."
        ],
        [
          "兩個排做夥，",
          "Nng7 e5 pai5 tso3-hue2,"
        ],
        [
          "媽媽愛爸爸，",
          "Ma1-ma1 ai3 pa1-pa1,"
        ],
        [
          "爸爸愛媽媽。",
          "Pa1-pa1 ai3 ma1-ma1."
        ]
      ],
      "篇名": "第五課、捏土俑仔"
    },
    {
      "段": [
        [
          "打馬膠，黏著腳，",
          "Tann2-ma2-ka1, liam5 tioh8 kha1,"
        ],
        [
          "叫阿爸，買豬腳。",
          "Kio3 a1-pa1, be2 ti1-kha1."
        ],
        [
          "豬腳箍仔[君^火]爛爛，",
          "Ti1-kha1 khoo1-a2 kun5 nua7-nua7,"
        ],
        [
          "枵鬼囡仔流嘴瀾。",
          "Iau1-kui2 gin2-a2 lau5-tshui3-nua7."
        ]
      ],
      "篇名": "第六課、打馬膠"
    },
    {
      "段": [
        [
          "一蕊花，二蕊花，",
          "Tsit8 lui2 hue1, nng7 lui2 hue1,"
        ],
        [
          "棚仔頂，開黃花，",
          "Pinn5-a2 ting2, khui1 ng5 hue1,"
        ],
        [
          "一條瓜，二條瓜，",
          "Tsit8 tiau5 kue1, nng7 tiau5 kue1,"
        ],
        [
          "棚仔頂，生菜瓜。",
          "Pinn5-a2 ting2, senn1 tshai3-kue1."
        ]
      ],
      "篇名": "第七課、菜瓜"
    },
    {
      "段": [
        [
          "這一欉，彼一欉，",
          "Tsia1 tsit8 tsang5, hia1 tsit8 tsang5,"
        ],
        [
          "種到歸百欉。",
          "Tsing2 kah4 kui1-pah4 tsang5."
        ],
        [
          "這開花，彼開花，",
          "Tsia1 khui1-hue1, hia1 khui1-hue1,"
        ],
        [
          "四界攏是花。",
          "Si3-ke3 long2 si7 hue1."
        ]
      ],
      "篇名": "第八課、種花"
    },
    {
      "段": [
        [
          "天黑黑，風透透，",
          "Thinn1 oo1-oo1, hong1 thau3-thau3,"
        ],
        [
          "雷公撞大砲。",
          "Lui5-kong1 long3 tua7-phau3."
        ],
        [
          "撞一聲，驚著貓；",
          "Long3 tsit8 siann1, kiann1 tioh8 niau1;"
        ],
        [
          "撞二聲，驚著狗；",
          "Long3 nng7 siann1, kiann1 tioh8 kau2;"
        ],
        [
          "撞三聲，",
          "Long3 sann1 siann1,"
        ],
        [
          "驚著紅嬰仔哞哞哮。",
          "Kiann1 tioh8 ang5-enn1-a2 ma3-ma3-hau2."
        ]
      ],
      "篇名": "第九課、雷公撞大砲"
    },
    {
      "段": [
        [
          "撓杯，撓杯，愛吃魚，",
          "La7-pue1, la7-pue1, ai3 tsiah8 hi5,"
        ],
        [
          "一支喙像飯匙。",
          "Tsit8 ki1 tshui3 tshiunn7 png7-si5."
        ],
        [
          "撓杯，撓杯，愛吃蝦，",
          "La7-pue1, la7-pue1, ai3 tsiah8 he5,"
        ],
        [
          "一支喙像琵琶。",
          "Tsit8 ki1 tshui3 tshiunn7 pi5-pe5."
        ]
      ],
      "篇名": "第十課、撓杯"
    },
    {
      "段": [
        [
          "關仔嶺，風景濟，",
          "Kuan1-a2-nia2, hong1-king2 tse7,"
        ],
        [
          "山起廟，水出火。",
          "Suann1 khi2 bio7, tsui2 tshut4-hue2."
        ],
        [
          "關仔嶺，好迌，",
          "Kuan1-a2-nia2, ho2 tshit4-tho5,"
        ],
        [
          "山懸懸，水燒燒。",
          "Suann1 kuan5-kuan5, tsui2 sio1-sio1."
        ],
        [
          "關仔嶺，出溫泉，",
          "Kuan1-a2-nia2, tshut4 un1-tsuann5,"
        ],
        [
          "水濁濁，上有名。",
          "Tsui2 lo5-lo5, siong7 u7-mia5."
        ]
      ],
      "篇名": "第十一課、關仔嶺"
    },
    {
      "段": [
        [
          "鹽山白白好風景，",
          "Iam5-suann1 peh8-peh8 ho2 hong1-king2,"
        ],
        [
          "起來頂懸看海湧。",
          "Peh4 khi2 lai5 ting2-kuan5 khuann3 hai2-ing2."
        ],
        [
          "海湧仔聲，講予阮聽，",
          "Hai2-ing2-a2 siann1, kong2 hoo7 gun2 thiann1,"
        ],
        [
          "海水入鹽埕，",
          "Hai2-tsui2 jip8 iam5 tiann5,"
        ],
        [
          "曝鹽做鹽山。",
          "Phak8 iam5 tso3 iam5-suann."
        ]
      ],
      "篇名": "第十二課、鹽山"
    }
  ]
}
